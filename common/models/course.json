{
  "name": "course",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "createdAt": {
      "type": "date",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "students": {
      "type": "hasMany",
      "model": "student",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    },
    "activities": {
      "type": "hasAndBelongsToMany",
      "model": "pdf",
      "foreignKey": ""
    },
    "supportContents": {
      "type": "hasAndBelongsToMany",
      "model": "supportContent",
      "foreignKey": ""
    },
    "corrector": {
      "type": "belongsTo",
      "model": "correction",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "facilitator",
      "permission": "ALLOW",
      "property": [
        "create",
        "find",
        "createNew",
        "__create__students",
        "__create__activities",
        "__link__activities",
        "__unlink__activities"
      ]
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "findById"
    }
  ],
  "methods": {}
}
